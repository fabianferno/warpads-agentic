{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
} 